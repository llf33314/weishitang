.weeklyMenu_box {
    position: relative;
}

.weeklyMenu_box_left {
    position: absolute;
    width: 160rpx;
    top: 0;
    left: 0;
    font-size: 30rpx;
    text-align: center;
    box-sizing: border-box;
   
}

.weeklyMenu_box_left .item {
    justify-content: center;
    align-items: center;
    line-height: 4;
    font-size: 30rpx;
    font-weight:700;
    box-sizing: border-box;
    
}

.weeklyMenu_box_right {
    padding-left: 160rpx;
}

.weeklyMenu_box_right_top {
    margin-left: -160rpx;
    padding-left: 160rpx;
    box-sizing: border-box;
    
}

.weeklyMenu_box_right_top .right_top_item {
    width: 25%;
    text-align: center;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    float: left;
    display: block;
    line-height:4;box-sizing: border-box;
    
}

.weeklyMenu_box_right_middle {
    margin-right: 160rpx;
    overflow: hidden;
}

