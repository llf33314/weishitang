/**index.wxss**/

.index_menu {
    padding: 20rpx 20rpx 100rpx 20rpx;
}

.index_menu .index_row {
    display: flex;
    height: 200rpx;
}

.index_menu .index_row .list {
    width: 50%;
    background: #03bf01;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
    line-height: 180rpx;
    margin: 20rpx 20rpx 0 0;
    border-radius: 8rpx;
}
.index_menu .index_row .list:active{
    background-color: #1d941b;
}
.index_menu .index_row .list:nth-of-type(2){
    margin-right: 0;
}
